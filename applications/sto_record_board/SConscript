# RT-Thread building script for bridge

import rtconfig
from building import *

cwd     = GetCurrentDir()
CPPPATH = [cwd, cwd + '/inc']

src =  Split('''
    sto_record_board.c
    src/led.c
    src/board_info.c
    src/data_handle.c
    src/file_handle_thread.c
    src/eth_thread.c
    src/Record_Board_App.c
    src/RecordErrorCode.c
    src/Common.c
    src/Record_FileCreate.c
    src/safe_layer.c
    src/crc.c
    src/app_layer.c
    src/file_manager.c
    src/utils/utils.c
    src/usb/usb.c
    src/can_common.c
    src/power_msg/power_msg.c
    '''
    )

group = DefineGroup('sto_record_board', src, depend = ['APP_STO_RECORD_BOART'], CPPPATH = CPPPATH)

Return('group')
