		        bool "Enable software I2C55 BUS"
		        default n
		        
	        config BSP_SOFT_I2C55_SCL
	            string "Set the GPIO of the I2C55 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C55
	            default "PH.4"
	            
