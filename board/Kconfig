		        bool "Enable software I2C24 BUS"
		        default n
		        
	        config BSP_SOFT_I2C24_SCL
	            string "Set the GPIO of the I2C24 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C24
	            default "PH.4"
	            
