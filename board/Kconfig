menu "Hardware Drivers Config"

menu "On-chip Peripheral Drivers"
    config SOC_SERIES_STM32F1
        bool
        default n
        
    config SOC_SERIES_STM32F4
        bool
        default n
        
    config SOC_SERIES_STM32H7
        bool
        default n
        
    menuconfig SOC_STM32
        bool "Select the Board"
        select RT_USING_COMPONENTS_INIT
        select RT_USING_USER_MAIN
        default y
        
        if SOC_STM32
    	    choice
                prompt "Select the core board type"
                default SOC_M4COREBOARD_NOSRAM
                
                config SOC_MINILINK_V2
                    bool "Select mini link v2"
                    select SOC_SERIES_STM32F1
    
                config SOC_ATK_EXPLORER_V24
                    bool "Select stm32f407 atk explorer v2.4"
                    select SOC_SERIES_STM32F4
                    
                config SOC_STM32F427ZGT6
                    bool "Select MCU stm32f427zgt6"
                    select SOC_SERIES_STM32F4
                    
                config SOC_M4COREBOARD_NOSRAM
                    bool "Select M4 core board with no sram"
                    select SOC_SERIES_STM32F4
                    
                config SOC_M4COREBOARD_SRAM
                    bool "Select M4 core board with sram"
                    select SOC_SERIES_STM32F4
                    
                config SOC_M4COREBOARD_SDRAM
                    bool "Select M4 core board with sdram"
                    select SOC_SERIES_STM32F4
                    
                config SOC_STM32F437IIT6
                    bool "Select MCU stm32f437iit6"
                    select SOC_SERIES_STM32F4
    
                config SOC_H7COREBOARD_NOSRAM
                    bool "Select H7 core board with no sram"
                    select SOC_SERIES_STM32H7
                    
                config SOC_H7COREBOARD_SDRAM
                    bool "Select H7 core board with sdram"
                    select SOC_SERIES_STM32H7
    
                config SOC_H7_STO_RECORD_BOARD
                    bool "Select STO H7 record board"
                    select SOC_SERIES_STM32H7

            endchoice
            
            config BSP_USING_GD32
                bool "Enable gd32 compatibility mode"
                default n
                
            config BSP_FLASH_START_ADDR
                hex "Set the flash memory start address, default: ((void *)0x08000000)"
                default (0x08000000)

            config BSP_FLASH_SIZE
                int "Set the flash memory size, default: (2048 * 1024)"
                default (2097152)
                
            config BSP_SRAM_START_ADDR
                hex "Set the sram start address, default: ((void *)0x20000000)"
                default (0x20000000)

            config BSP_SRAM_SIZE
                int "Set the sram size, default: (192 * 1024)"
                default (196608)

            config BSP_ENABLE_MPU
                bool "Enable MPU"
                depends on SOC_SERIES_STM32H7
                default n
            
            config BSP_SCB_ENABLE_I_CACHE
                bool "Enable scb i cache"
                depends on SOC_SERIES_STM32H7
                default n
                
            config BSP_SCB_ENABLE_D_CACHE
                bool "Enable scb d cache"
                depends on SOC_SERIES_STM32H7
                default n
        endif

    choice
        prompt "Select the boot model"
        default BSP_USING_NOBOOT
        
        config BSP_USING_BOOTAPP
            bool "Enable boot app mode"
            select BSP_USING_ON_CHIP_FLASH

        config BSP_USING_BOOTLOADER
            bool "Enable bootloader mode"
            select BSP_USING_ON_CHIP_FLASH
            select PKG_USING_QBOOT
            
        config BSP_USING_NOBOOT
            bool "Disable boot mode"
    endchoice
        
    config BSP_USING_SYS_LED
        bool "Enable system operation led"
        select BSP_USING_GPIO
        default y
        
    config BSP_SYS_LED_GPIO
        string "Set the GPIO of the SYS_LED pin, default: PI.11"
        depends on BSP_USING_SYS_LED
        default "PI.11"
        
    config BSP_SYS_LED_DELAY
        int "Set the led delay ms, default: 500"
        depends on BSP_USING_SYS_LED
        default 500
        
    menuconfig BSP_USING_GPIO_TABLE
        bool "Enable core board gpio table"
        select BSP_USING_GPIO
        default y
        
        if BSP_USING_GPIO_TABLE
            config BSP_GPIO_TABLE_GPIO1
                string "Set the GPIO1 pin, default: PF.8"
                default "PF.8"
                
            config BSP_GPIO_TABLE_GPIO2
                string "Set the GPIO2 pin, default: PF.9"
                default "PF.9"
                
            config BSP_GPIO_TABLE_GPIO3
                string "Set the GPIO3 pin, default: PF.11"
                default "PF.11"
                
            config BSP_GPIO_TABLE_GPIO4
                string "Set the GPIO4 pin, default: PG.8"
                default "PG.8"
                
            config BSP_GPIO_TABLE_GPIO5
                string "Set the GPIO5 pin, default: PH.7"
                default "PH.7"
                
            config BSP_GPIO_TABLE_GPIO6
                string "Set the GPIO6 pin, default: PI.3"
                default "PI.3"
                
            config BSP_GPIO_TABLE_GPIO7
                string "Set the GPIO7 pin, default: PC.13"
                default "PC.13"
                
            config BSP_GPIO_TABLE_GPIO8
                string "Set the GPIO8 pin, default: PD.3"
                default "PD.3"
                
            config BSP_GPIO_TABLE_SPI1_CS0
                string "Set the SPI1_CS0 pin, default: PA.4"
                default "PA.4"
                
            config BSP_GPIO_TABLE_SPI1_CS1
                string "Set the SPI1_CS1 pin, default: PA.10"
                default "PA.10"
                
            config BSP_GPIO_TABLE_SPI1_CS2
                string "Set the SPI1_CS2 pin, default: PC.0"
                default "PC.0"
                
            config BSP_GPIO_TABLE_SPI2_CS0
                string "Set the SPI2_CS0 pin, default: PA.15"
                default "PA.15"
                
            config BSP_GPIO_TABLE_SPI2_CS1
                string "Set the SPI2_CS1 pin, default: PC.4"
                default "PC.4"
                
            config BSP_GPIO_TABLE_SPI2_CS2
                string "Set the SPI2_CS2 pin, default: PC.5"
                default "PC.5"
                
            config BSP_GPIO_TABLE_PWM1
                string "Set the PWM1 pin, default: PA.2"
                default "PA.2"
                
            config BSP_GPIO_TABLE_PWM2
                string "Set the PWM2 pin, default: PA.8"
                default "PA.8"
                
            config BSP_GPIO_TABLE_PWM3
                string "Set the PWM3 pin, default: PB.1"
                default "PB.1"
                
            config BSP_GPIO_TABLE_PWM4
                string "Set the PWM4 pin, default: PH.6"
                default "PH.6"
                
            config BSP_GPIO_TABLE_SPI1_SCK
                string "Set the SPI1_SCK pin, default: PA.5"
                default "PA.5"
                
            config BSP_GPIO_TABLE_SPI1_MISO
                string "Set the SPI1_MISO pin, default: PA.6"
                default "PA.6"
                
            config BSP_GPIO_TABLE_SPI1_MOSI
                string "Set the SPI1_MOSI pin, default: PA.7"
                default "PA.7"
                
            config BSP_GPIO_TABLE_SPI2_SCK
                string "Set the SPI2_SCK pin, default: PF.7"
                default "PF.7"
                
            config BSP_GPIO_TABLE_SPI2_MISO
                string "Set the SPI2_MISO pin, default: PF.8"
                default "PF.8"
                
            config BSP_GPIO_TABLE_SPI2_MOSI
                string "Set the SPI2_MOSI pin, default: PF.9"
                default "PF.9"
                
            config BSP_GPIO_TABLE_I2S1_MCK
                string "Set the I2S1_MCK pin, default: PA.3"
                default "PA.3"
                
            config BSP_GPIO_TABLE_I2S1_SDI
                string "Set the I2S1_SDI pin, default: PC.2"
                default "PC.2"
                
            config BSP_GPIO_TABLE_I2S1_SDO
                string "Set the I2S1_SDO pin, default: PC.1"
                default "PC.1"
                
            config BSP_GPIO_TABLE_I2S1_WS
                string "Set the I2S1_WS pin, default: PB.12"
                default "PB.12"
                
            config BSP_GPIO_TABLE_I2S1_CK
                string "Set the I2S1_CK pin, default: PA.9"
                default "PA.9"
        endif
    menuconfig BSP_USING_DEV_TABLE
        bool "Enable core board dev table"
        default y
        
        if BSP_USING_DEV_TABLE
            config BSP_DEV_TABLE_UART1
                string "Set the UART1 dev name, default: uart3"
                default "uart3"
                
            config BSP_DEV_TABLE_UART2
                string "Set the UART2 dev name, default: uart7"
                default "uart7"
                
            config BSP_DEV_TABLE_UART3
                string "Set the UART3 dev name, default: uart4"
                default "uart4"
                
            config BSP_DEV_TABLE_UART4
                string "Set the UART4 dev name, default: uart8"
                default "uart8"
                
            config BSP_DEV_TABLE_SPI1
                string "Set the SPI1 dev name, default: spi1"
                default "spi1"
                
            config BSP_DEV_TABLE_SPI2
                string "Set the SPI2 dev name, default: sspi2"
                default "sspi2"
                
            config BSP_DEV_TABLE_I2C1
                string "Set the I2C1 dev name, default: i2c1"
                default "i2c1"
                
            config BSP_DEV_TABLE_I2C2
                string "Set the I2C2 dev name, default: i2c2"
                default "i2c2"
                
            config BSP_DEV_TABLE_CAN1
                string "Set the CAN1 dev name, default: can1"
                default "can1"
                
            config BSP_DEV_TABLE_CAN2
                string "Set the CAN2 dev name, default: can2"
                default "can2"
        endif

    menuconfig BSP_USING_UART
        bool "Enable UART"
        select RT_USING_SERIAL
        default y
        
        if BSP_USING_UART
        	config BSP_USING_UART1
                bool "Enable UART1"
                default n
   
            config BSP_UART1_RX_USING_DMA
                bool "Enable UART1 RX DMA"
                depends on BSP_USING_UART1 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART1_TX_USING_DMA
                bool "Enable UART1 TX DMA"
                depends on BSP_USING_UART1 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART1_TX_BUFSIZE
                int "Set UART1 TX buffer size"
                depends on BSP_USING_UART1 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART1_RX_BUFSIZE
                int "Set UART1 RX buffer size"
                depends on BSP_USING_UART1 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART1_RS485MODE
            	bool "Enable UART1 rs485 mode"
            	depends on BSP_USING_UART1
                default n
                select RT_USING_PIN
                
            config BSP_UART1_DERE
		        string "Set the GPIO of the UART1 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART1 && BSP_UART1_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART2
                bool "Enable UART2"
                default n
   
            config BSP_UART2_RX_USING_DMA
                bool "Enable UART2 RX DMA"
                depends on BSP_USING_UART2 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART2_TX_USING_DMA
                bool "Enable UART2 TX DMA"
                depends on BSP_USING_UART2 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART2_TX_BUFSIZE
                int "Set UART2 TX buffer size"
                depends on BSP_USING_UART2 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART2_RX_BUFSIZE
                int "Set UART2 RX buffer size"
                depends on BSP_USING_UART2 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART2_RS485MODE
            	bool "Enable UART2 rs485 mode"
            	depends on BSP_USING_UART2
                default n
                select RT_USING_PIN
                
            config BSP_UART2_DERE
		        string "Set the GPIO of the UART2 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART2 && BSP_UART2_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART3
                bool "Enable UART3"
                default n
   
            config BSP_UART3_RX_USING_DMA
                bool "Enable UART3 RX DMA"
                depends on BSP_USING_UART3 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART3_TX_USING_DMA
                bool "Enable UART3 TX DMA"
                depends on BSP_USING_UART3 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART3_TX_BUFSIZE
                int "Set UART3 TX buffer size"
                depends on BSP_USING_UART3 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART3_RX_BUFSIZE
                int "Set UART3 RX buffer size"
                depends on BSP_USING_UART3 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART3_RS485MODE
            	bool "Enable UART3 rs485 mode"
            	depends on BSP_USING_UART3
                default n
                select RT_USING_PIN
                
            config BSP_UART3_DERE
		        string "Set the GPIO of the UART3 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART3 && BSP_UART3_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART4
                bool "Enable UART4"
                default n
   
            config BSP_UART4_RX_USING_DMA
                bool "Enable UART4 RX DMA"
                depends on BSP_USING_UART4 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART4_TX_USING_DMA
                bool "Enable UART4 TX DMA"
                depends on BSP_USING_UART4 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART4_TX_BUFSIZE
                int "Set UART4 TX buffer size"
                depends on BSP_USING_UART4 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART4_RX_BUFSIZE
                int "Set UART4 RX buffer size"
                depends on BSP_USING_UART4 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART4_RS485MODE
            	bool "Enable UART4 rs485 mode"
            	depends on BSP_USING_UART4
                default n
                select RT_USING_PIN
                
            config BSP_UART4_DERE
		        string "Set the GPIO of the UART4 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART4 && BSP_UART4_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART5
                bool "Enable UART5"
                default n
   
            config BSP_UART5_RX_USING_DMA
                bool "Enable UART5 RX DMA"
                depends on BSP_USING_UART5 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART5_TX_USING_DMA
                bool "Enable UART5 TX DMA"
                depends on BSP_USING_UART5 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART5_TX_BUFSIZE
                int "Set UART5 TX buffer size"
                depends on BSP_USING_UART5 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART5_RX_BUFSIZE
                int "Set UART5 RX buffer size"
                depends on BSP_USING_UART5 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART5_RS485MODE
            	bool "Enable UART5 rs485 mode"
            	depends on BSP_USING_UART5
                default n
                select RT_USING_PIN
                
            config BSP_UART5_DERE
		        string "Set the GPIO of the UART5 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART5 && BSP_UART5_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART6
                bool "Enable UART6"
                default n
   
            config BSP_UART6_RX_USING_DMA
                bool "Enable UART6 RX DMA"
                depends on BSP_USING_UART6 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART6_TX_USING_DMA
                bool "Enable UART6 TX DMA"
                depends on BSP_USING_UART6 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART6_TX_BUFSIZE
                int "Set UART6 TX buffer size"
                depends on BSP_USING_UART6 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART6_RX_BUFSIZE
                int "Set UART6 RX buffer size"
                depends on BSP_USING_UART6 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART6_RS485MODE
            	bool "Enable UART6 rs485 mode"
            	depends on BSP_USING_UART6
                default n
                select RT_USING_PIN
                
            config BSP_UART6_DERE
		        string "Set the GPIO of the UART6 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART6 && BSP_UART6_RS485MODE
		        default "PF.8"
                
            config BSP_USING_UART7
                bool "Enable UART7"
                default n
   
            config BSP_UART7_RX_USING_DMA
                bool "Enable UART7 RX DMA"
                depends on BSP_USING_UART7 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART7_TX_USING_DMA
                bool "Enable UART7 TX DMA"
                depends on BSP_USING_UART7 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART7_TX_BUFSIZE
                int "Set UART7 TX buffer size"
                depends on BSP_USING_UART7 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART7_RX_BUFSIZE
                int "Set UART7 RX buffer size"
                depends on BSP_USING_UART7 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART7_RS485MODE
            	bool "Enable UART7 rs485 mode"
            	depends on BSP_USING_UART7
                default n
                select RT_USING_PIN
                
            config BSP_UART7_DERE
		        string "Set the GPIO of the UART7 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART7 && BSP_UART7_RS485MODE
		        default "PF.8"
		        
		    config BSP_USING_UART8
                bool "Enable UART8"
                default n
   
            config BSP_UART8_RX_USING_DMA
                bool "Enable UART8 RX DMA"
                depends on BSP_USING_UART8 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART8_TX_USING_DMA
                bool "Enable UART8 TX DMA"
                depends on BSP_USING_UART8 && RT_SERIAL_USING_DMA
                default n
                
            config BSP_UART8_TX_BUFSIZE
                int "Set UART8 TX buffer size"
                depends on BSP_USING_UART8 && RT_USING_SERIAL_V2
                default 128
	                
            config BSP_UART8_RX_BUFSIZE
                int "Set UART8 RX buffer size"
                depends on BSP_USING_UART8 && RT_USING_SERIAL_V2
                default 128
                
            config BSP_UART8_RS485MODE
            	bool "Enable UART8 rs485 mode"
            	depends on BSP_USING_UART8
                default n
                select RT_USING_PIN
                
            config BSP_UART8_DERE
		        string "Set the GPIO of the UART8 rs485 DE/RE, default: PF.8"
		        depends on BSP_USING_UART8 && BSP_UART8_RS485MODE
		        default "PF.8"
        endif
        
    menuconfig BSP_USING_CCMSRAM
        bool "Enable CCM SRAM"
        depends on SOC_SERIES_STM32F4
        default n
        
        if BSP_USING_CCMSRAM
            config BSP_CCMSRAM_ADDR
	            hex "Set the memory start address, default: ((void *)0x10000000)"
	            default (0x10000000)

            config BSP_CCMSRAM_SIZE
	            int "Set memory size, default: (64 * 1024)"
	            default (65536)
        endif
        
    menuconfig BSP_USING_ADDSRAM
        bool "Enable ADD SRAM"
        depends on SOC_SERIES_STM32F4 && BSP_USING_GD32
        default n
        
        if BSP_USING_ADDSRAM
            config BSP_ADDSRAM_ADDR
                hex "Set the memory start address, default: ((void *)0x20030000)"
                default (0x20030000)

            config BSP_ADDSRAM_SIZE
                int "Set memory size, default: (256 * 1024)"
                default (262144)
        endif
        
    menuconfig BSP_USING_TCMSRAM
        bool "Enable TCM SRAM"
        depends on SOC_SERIES_STM32H7
        default y
        
        if BSP_USING_TCMSRAM
            config BSP_USING_ITCMSRAM
                bool "Enable ITCM SRAM"
                default y
                
            config BSP_ITCMSRAM_ADDR
                hex "Set the ITCM SRAM memory start address, default: ((void *)0x00000000)"
                depends on BSP_USING_ITCMSRAM
                default (0x00000000)

            config BSP_ITCMSRAM_SIZE
                int "Set ITCM SRAM memory size, default: (64 * 1024)"
                depends on BSP_USING_ITCMSRAM
                default (65536)
                
            config BSP_USING_DTCMSRAM
                bool "Enable DTCM SRAM"
                default y
                
            config BSP_DTCMSRAM_ADDR
                hex "Set the DTCM SRAM memory start address, default: ((void *)0x20000000)"
                depends on BSP_USING_DTCMSRAM
                default (0x20000000)

            config BSP_DTCMSRAM_SIZE
                int "Set DTCM SRAM memory size, default: (128 * 1024)"
                depends on BSP_USING_DTCMSRAM
                default (131072)
        endif
        
    menuconfig BSP_USING_AXISRAM
        bool "Enable AXI SRAM"
        depends on SOC_SERIES_STM32H7
        default y
        
        if BSP_USING_AXISRAM
            config BSP_AXISRAM_ADDR
                hex "Set the AXI SRAM memory start address, default: ((void *)0x24000000)"
                default (0x24000000)

            config BSP_AXISRAM_SIZE
                int "Set AXI SRAM memory size, default: (512 * 1024)"
                default (524288)
        endif
        
    menuconfig BSP_USING_AHBSRAM
        bool "Enable AHB SRAM"
        depends on SOC_SERIES_STM32H7
        default n
        
        if BSP_USING_AHBSRAM
            config BSP_USING_AHBSRAM_D2
                bool "Enable AHBSRAM D2"
                default n
        
            config BSP_AHBSRAM_D2_ADDR
                hex "Set the d2 memory start address, default: ((void *)0x30000000)"
                depends on BSP_USING_AHBSRAM_D2
                default (0x30000000)

            config BSP_AHBSRAM_D2_SIZE
                int "Set d2 memory size, default: (256 * 1024)"
                depends on BSP_USING_AHBSRAM_D2
                default (262144)
                
            config BSP_USING_AHBSRAM_D3
                bool "Enable AHBSRAM D3"
                default n
                
            config BSP_AHBSRAM_D3_ADDR
                hex "Set the d3 memory start address, default: ((void *)0x38000000)"
                depends on BSP_USING_AHBSRAM_D3
                default (0x38000000)

            config BSP_AHBSRAM_D3_SIZE
                int "Set d3 memory size, default: (64 * 1024)"
                depends on BSP_USING_AHBSRAM_D3
                default (65536)
        endif

    menuconfig BSP_USING_ON_CHIP_FLASH
        bool "Enable on-chip FLASH"
        default n
        select RT_USING_FAL
        select FAL_PART_HAS_TABLE_CFG
        
        if BSP_USING_ON_CHIP_FLASH
            config FLASH_SIZE_BOOTLOADER
	            int "Set the flash size of the bootloader area, default: (128 * 1024)"
	            default (131072)

            config FLASH_SIZE_APP
	            int "Set the flash size of the app area, default: (1920 * 1024)"
	            default (1966080)
	            
	        config FLASH_SIZE_DOWNLOAD
                int "Set the flash size of the download area, default: (0 * 1024)"
                default (0)
                
            config FLASH_SIZE_FACTORY
                int "Set the flash size of the factory area, default: (0 * 1024)"
                default (0)
	            
	        config FLASH_USING_BLK256
                bool "Enable additional storage area with 256k block size"
                depends on BSP_USING_GD32
                default n
                
            config FLASH_SIZE_BLK256
	            int "Set the flash size of the data area, default: (1024 * 1024)"
	            depends on FLASH_USING_BLK256
	            default (1048576)
        endif
        
    menuconfig BSP_USING_CAN
        bool "Enable CAN"
        default n
        select RT_USING_CAN
        
        if BSP_USING_CAN
            config BSP_USING_CAN168M
                bool "Enable this mode when using usb"
                depends on SOC_SERIES_STM32F4
                default n
        
            config BSP_USING_CAN1
                bool "Enable CAN1"
                default n
                
            config BSP_USING_CAN2
                bool "Enable CAN2"
                default n
        endif
        
    menuconfig BSP_USING_FDCAN
        bool "Enable FDCAN"
        depends on SOC_SERIES_STM32H7
        default n
        select RT_USING_CAN
        select RT_CAN_USING_CANFD
        
        if BSP_USING_FDCAN
            config BSP_USING_FDCAN1
                bool "USING FDCAN1"
                default n
                
            config BSP_USING_FDCAN2
                bool "USING FDCAN2"
                default n
        endif

    menuconfig BSP_USING_SPI
        bool "Enable SPI BUS"
        default n
        select RT_USING_SPI
        
        if BSP_USING_SPI
            config BSP_USING_SPI1
                bool "Enable SPI1 BUS"
                default n

            config BSP_SPI1_TX_USING_DMA
                bool "Enable SPI1 TX DMA"
                depends on BSP_USING_SPI1
                default n
                
            config BSP_SPI1_RX_USING_DMA
                bool "Enable SPI1 RX DMA"
                depends on BSP_USING_SPI1
                default n
                
            config BSP_USING_SPI2
                bool "Enable SPI2 BUS"
                default n

            config BSP_SPI2_TX_USING_DMA
                bool "Enable SPI2 TX DMA"
                depends on BSP_USING_SPI2
                default n
                
            config BSP_SPI2_RX_USING_DMA
                bool "Enable SPI2 RX DMA"
                depends on BSP_USING_SPI2
                default n
                
            config BSP_USING_SPI3
                bool "Enable SPI3 BUS"
                default n

            config BSP_SPI3_TX_USING_DMA
                bool "Enable SPI3 TX DMA"
                depends on BSP_USING_SPI3
                default n
                
            config BSP_SPI3_RX_USING_DMA
                bool "Enable SPI3 RX DMA"
                depends on BSP_USING_SPI3
                default n
                
            config BSP_USING_SPI4
                bool "Enable SPI4 BUS"
                default n

            config BSP_SPI4_TX_USING_DMA
                bool "Enable SPI4 TX DMA"
                depends on BSP_USING_SPI4
                default n
                
            config BSP_SPI4_RX_USING_DMA
                bool "Enable SPI4 RX DMA"
                depends on BSP_USING_SPI4
                default n
                
            config BSP_USING_SPI5
                bool "Enable SPI5 BUS"
                default n

            config BSP_SPI5_TX_USING_DMA
                bool "Enable SPI5 TX DMA"
                depends on BSP_USING_SPI5
                default n
                
            config BSP_SPI5_RX_USING_DMA
                bool "Enable SPI5 RX DMA"
                depends on BSP_USING_SPI5
                default n
                
            config BSP_USING_SPI6
                bool "Enable SPI6 BUS"
                default n

            config BSP_SPI6_TX_USING_DMA
                bool "Enable SPI6 TX DMA"
                depends on BSP_USING_SPI6
                default n
                
            config BSP_SPI6_RX_USING_DMA
                bool "Enable SPI6 RX DMA"
                depends on BSP_USING_SPI6
                default n
        endif
        
    menuconfig BSP_USING_SOFT_SPI
        bool "Enable software SPI BUS"
        default n
        select RT_USING_SPI
        select RT_USING_SPI_BITOPS
        select RT_USING_PIN
        
        if BSP_USING_SOFT_SPI
            config BSP_USING_SOFT_SPI1
                bool "Enable software SPI1 BUS"
                default n
                
            config BSP_S_SPI1_SCK
	            string "Set the GPIO of the SPI1 sck, default: PA.5"
	            depends on BSP_USING_SOFT_SPI1
	            default "PA.5"
	            
	        config BSP_S_SPI1_MOSI
	            string "Set the GPIO of the SPI1 mosi, default: PA.7"
	            depends on BSP_USING_SOFT_SPI1
	            default "PA.7"
	            
	        config BSP_S_SPI1_MISO
	            string "Set the GPIO of the SPI1 miso, default: PA.6"
	            depends on BSP_USING_SOFT_SPI1
	            default "PA.6"
	            
            config BSP_USING_SOFT_SPI2
                bool "Enable software SPI2 BUS"
                default n
                
            config BSP_S_SPI2_SCK
	            string "Set the GPIO of the SPI2 sck, default: PB.3"
	            depends on BSP_USING_SOFT_SPI2
	            default "PB.3"
	            
	        config BSP_S_SPI2_MOSI
	            string "Set the GPIO of the SPI2 mosi, default: PB.0"
	            depends on BSP_USING_SOFT_SPI2
	            default "PB.0"
	            
	        config BSP_S_SPI2_MISO
	            string "Set the GPIO of the SPI2 miso, default: PB.4"
	            depends on BSP_USING_SOFT_SPI2
	            default "PB.4"
	            
            config BSP_USING_SOFT_SPI3
                bool "Enable software SPI3 BUS"
                default n
                
            config BSP_S_SPI3_SCK
	            string "Set the GPIO of the SPI3 sck, default: PA.5"
	            depends on BSP_USING_SOFT_SPI3
	            default "PA.5"
	            
	        config BSP_S_SPI3_MOSI
	            string "Set the GPIO of the SPI3 mosi, default: PA.7"
	            depends on BSP_USING_SOFT_SPI3
	            default "PA.7"
	            
	        config BSP_S_SPI3_MISO
	            string "Set the GPIO of the SPI3 miso, default: PA.6"
	            depends on BSP_USING_SOFT_SPI3
	            default "PA.6"
        endif
        
    menuconfig BSP_USING_I2S
        bool "Enable I2S"
        default n
        
        if BSP_USING_I2S
            config BSP_I2S1_RX_USING_DMA
                bool
                default n
            
            config BSP_I2S1_TX_USING_DMA
                bool
                default n
                
            config BSP_I2S2_RX_USING_DMA
                bool
                default n
            
            config BSP_I2S2_TX_USING_DMA
                bool
                default n
                
            config BSP_I2S3_RX_USING_DMA
                bool
                default n
            
            config BSP_I2S3_TX_USING_DMA
                bool
                default n
                
            choice
                prompt "Select i2s bus"
                default BSP_USING_I2S2
    
                config BSP_USING_I2S1
                    bool "Enable I2S1"
                    select BSP_I2S1_RX_USING_DMA
                    select BSP_I2S1_TX_USING_DMA
                    
                config BSP_USING_I2S2
                    bool "Enable I2S2"
                    select BSP_I2S2_RX_USING_DMA
                    select BSP_I2S2_TX_USING_DMA
                    
                config BSP_USING_I2S3
                    bool "Enable I2S3"
                    select BSP_I2S3_RX_USING_DMA
                    select BSP_I2S3_TX_USING_DMA
            endchoice
            
            config BSP_I2S_USING_MCLK
                bool "Enable MCLK output"
                default n
        endif
        
    menuconfig BSP_USING_USB
    	bool "Enable USB"
        default n
        
        if BSP_USING_USB
            config BSP_USING_USB_CAN
                bool
                depends on SOC_SERIES_STM32F4
                select BSP_USING_CAN168M
                default y
       	
	        choice
	            prompt "Select USB protocol stack"
	            default BSP_USING_USBH_STM32
	
	            config BSP_USING_USBH_CHERRY
	                bool "Enable USB Host CherryUSB"
	                select PKG_USING_CHERRYUSB
	                select PKG_CHERRYUSB_HOST
	                select RT_USING_DFS
                    select RT_USING_DFS_ROMFS
                    select RT_USING_DFS_TMPFS
                    select RT_USING_DFS_ELMFAT
	                
	            config BSP_USING_USBD_CHERRY
                    bool "Enable USB Device CherryUSB"
                    select PKG_USING_CHERRYUSB
                    select PKG_CHERRYUSB_DEVICE
	                
	            config BSP_USING_USBH_STM32
                    bool "Enable USB Host STM32"
                    select RT_USING_DFS
                    select RT_USING_DFS_ROMFS
                    select RT_USING_DFS_TMPFS
                    select RT_USING_DFS_ELMFAT
                    select PKG_USING_CMSIS_RTOS2
                    select PKG_CMSIS_RTOS2_COMPATIBLE_CMSIS_RTOS1
	
	            config BSP_USING_USBH
	                bool "Enable USB Host"
	                select RT_USING_USB_HOST
	                
	            config BSP_USING_USBD
			    	bool "Enable USB Device"
			        select RT_USING_USB_DEVICE
	        endchoice
	        
	        if BSP_USING_USBH_CHERRY
	            config USBH_MSC_FS
		            string "Set the Udisk file system used, default: elm"
		            default "elm"
	        endif
	        
	        if BSP_USING_USBD_CHERRY
                choice
                    prompt "Select USB Device"
                    default USBD_USING_CDC
        
                    config USBD_USING_CDC
                        bool "Enable USB CDC"
                        
                    config USBD_USING_CMSIS_DAP
                        bool "Enable USB CMSIS DAP"
                endchoice
                    
                config CMSIS_DAP_SWCLK_TCK_PIN
                    string "Set the swclk/tck pin, default: PB.0"
                    depends on USBD_USING_CMSIS_DAP
                    default "PB.0"
                    
                config CMSIS_DAP_SWDIO_OUT_PIN
                    string "Set the swdio out pin, default: PB.1"
                    depends on USBD_USING_CMSIS_DAP
                    default "PB.1"
                    
                config CMSIS_DAP_SWDIO_IN_PIN
                    string "Set the swdio in pin, default: PB.2"
                    depends on USBD_USING_CMSIS_DAP
                    default "PB.2"
                    
                config CMSIS_DAP_COM_LED_PIN
                    string "Set the com led pin, default: PB.5"
                    depends on USBD_USING_CMSIS_DAP
                    default "PB.5"
                    
                config CMSIS_DAP_DAP_LED_PIN
                    string "Set the dap led pin, default: PB.6"
                    depends on USBD_USING_CMSIS_DAP
                    default "PB.6"

                config CDC_UART_DEV
                    string "Set cdc uart, default: uart3"
                    depends on USBD_USING_CDC || USBD_USING_CMSIS_DAP
                    default "uart3"
            endif
	        
	        if BSP_USING_USBH_STM32
                choice
                    prompt "Select USB port"
                    default BSP_USING_USBH_STM32_HS
        
                    config BSP_USING_USBH_STM32_FS
                        bool "Select USB FS"
                        
                    config BSP_USING_USBH_STM32_HS
                        bool "Select USB HS"
                endchoice
                
                config USBH_STM32_USING_POWER
                    bool "Enable USB POWER"
                    default n
                    
                config USBH_STM32_POWER_PIN
                    string "Set the usb power pin, default: PA.15"
                    depends on USBH_STM32_USING_POWER
                    default "PA.15"
                
                config USBH_STM32_USING_EXTERNAL_PHY
                    bool "Enable EXTERNAL PHY"
                    default n
            
                config USBH_THREAD_STACK_SIZE
                    int "Set the size of the USB host task stack, default: 4096"
                    default (4096)
                    
                config USBH_MSC_FS
                    string "Set the Udisk file system used, default: elm"
                    default "elm"
            endif
	        
	        if BSP_USING_USBH
                choice
                    prompt "Select USB port"
                    default BSP_USING_USBH_HS
        
                    config BSP_USING_USBH_FS
                        bool "Select USB FS"
                        
                    config BSP_USING_USBH_HS
                        bool "Select USB HS"
                endchoice
                
                config USBH_USING_CONTROLLABLE_POWER
                    bool "Enable USB POWER"
                    default n
                    
                config USBH_POWER_PIN
                    string "Set the usb power pin, default: PA.15"
                    depends on USBH_USING_CONTROLLABLE_POWER
                    default "PA.15"
                
	            menuconfig RT_USBH_MSTORAGE
	                bool "Enable Udisk Drivers"
	                default n
	                
	                if RT_USBH_MSTORAGE
	                    config UDISK_MOUNTPOINT
	                    string "Set the Udisk mount dir, default: /mnt/udisk"
	                    default "/mnt/udisk"
	                endif
	        endif
        endif
        
    config BSP_USING_SDIO
        bool "Enable SDIO"
        select RT_USING_SDIO
        select RT_USING_DFS
        default n
        
    config SDIO_MAX_FREQ
        int "Set SDIO max freq, default: 120000000"
        depends on BSP_USING_SDIO
        default 120000000

    menuconfig BSP_USING_I2C
    	bool "Enable I2C BUS"
        default n
        select RT_USING_I2C
        
        if BSP_USING_I2C
		    config BSP_USING_I2C1
		        bool "Enable I2C1 BUS"
		        default n
	            
	        config BSP_USING_I2C2
		        bool "Enable I2C2 BUS"
		        default n

	        config BSP_USING_I2C3
		        bool "Enable I2C3 BUS"
		        default n
        endif
        
    menuconfig BSP_USING_SOFT_I2C
    	bool "Enable software I2C BUS"
        default n
        select RT_USING_I2C
        select RT_USING_I2C_BITOPS
        select RT_USING_PIN
        
        if BSP_USING_SOFT_I2C
		    menuconfig BSP_USING_SOFT_I2C1
		        bool "Enable software I2C1 BUS"
		        default n
		        
	        config BSP_SOFT_I2C1_SCL
	            string "Set the GPIO of the I2C1 scl pin, default: PH.6"
	            depends on BSP_USING_SOFT_I2C1
	            default "PH.6"
	            
	        config BSP_SOFT_I2C1_SDA
	            string "Set the GPIO of the I2C1 sda pin, default: PH.7"
	            depends on BSP_USING_SOFT_I2C1
	            default "PH.7"
	            
	        menuconfig BSP_USING_SOFT_I2C2
		        bool "Enable software I2C2 BUS"
		        default n

	        config BSP_SOFT_I2C2_SCL
	            string "Set the GPIO of the I2C2 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C2
	            default "PH.4"
	            
	        config BSP_SOFT_I2C2_SDA
	            string "Set the GPIO of the I2C2 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C2
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C3
		        bool "Enable software I2C3 BUS"
		        default n
		        
	        config BSP_SOFT_I2C3_SCL
	            string "Set the GPIO of the I2C3 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C3
	            default "PH.4"
	            
	        config BSP_SOFT_I2C3_SDA
	            string "Set the GPIO of the I2C3 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C3
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C4
		        bool "Enable software I2C4 BUS"
		        default n
		        
	        config BSP_SOFT_I2C4_SCL
	            string "Set the GPIO of the I2C4 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C4
	            default "PH.4"
	            
	        config BSP_SOFT_I2C4_SDA
	            string "Set the GPIO of the I2C4 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C4
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C5
		        bool "Enable software I2C5 BUS"
		        default n
		        
	        config BSP_SOFT_I2C5_SCL
	            string "Set the GPIO of the I2C5 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C5
	            default "PH.4"
	            
	        config BSP_SOFT_I2C5_SDA
	            string "Set the GPIO of the I2C5 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C5
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C6
		        bool "Enable software I2C6 BUS"
		        default n
		        
	        config BSP_SOFT_I2C6_SCL
	            string "Set the GPIO of the I2C6 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C6
	            default "PH.4"
	            
	        config BSP_SOFT_I2C6_SDA
	            string "Set the GPIO of the I2C6 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C6
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C7
		        bool "Enable software I2C7 BUS"
		        default n
		        
	        config BSP_SOFT_I2C7_SCL
	            string "Set the GPIO of the I2C7 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C7
	            default "PH.4"
	            
	        config BSP_SOFT_I2C7_SDA
	            string "Set the GPIO of the I2C7 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C7
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C8
		        bool "Enable software I2C8 BUS"
		        default n
		        
	        config BSP_SOFT_I2C8_SCL
	            string "Set the GPIO of the I2C8 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C8
	            default "PH.4"
	            
	        config BSP_SOFT_I2C8_SDA
	            string "Set the GPIO of the I2C8 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C8
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C9
		        bool "Enable software I2C9 BUS"
		        default n
		        
	        config BSP_SOFT_I2C9_SCL
	            string "Set the GPIO of the I2C9 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C9
	            default "PH.4"
	            
	        config BSP_SOFT_I2C9_SDA
	            string "Set the GPIO of the I2C9 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C9
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C10
		        bool "Enable software I2C10 BUS"
		        default n
		        
	        config BSP_SOFT_I2C10_SCL
	            string "Set the GPIO of the I2C10 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C10
	            default "PH.4"
	            
	        config BSP_SOFT_I2C10_SDA
	            string "Set the GPIO of the I2C10 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C10
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C11
		        bool "Enable software I2C11 BUS"
		        default n
		        
	        config BSP_SOFT_I2C11_SCL
	            string "Set the GPIO of the I2C11 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C11
	            default "PH.4"
	            
	        config BSP_SOFT_I2C11_SDA
	            string "Set the GPIO of the I2C11 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C11
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C12
		        bool "Enable software I2C12 BUS"
		        default n
		        
	        config BSP_SOFT_I2C12_SCL
	            string "Set the GPIO of the I2C12 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C12
	            default "PH.4"
	            
	        config BSP_SOFT_I2C12_SDA
	            string "Set the GPIO of the I2C12 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C12
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C13
		        bool "Enable software I2C13 BUS"
		        default n
		        
	        config BSP_SOFT_I2C13_SCL
	            string "Set the GPIO of the I2C13 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C13
	            default "PH.4"
	            
	        config BSP_SOFT_I2C13_SDA
	            string "Set the GPIO of the I2C13 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C13
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C14
		        bool "Enable software I2C14 BUS"
		        default n
		        
	        config BSP_SOFT_I2C14_SCL
	            string "Set the GPIO of the I2C14 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C14
	            default "PH.4"
	            
	        config BSP_SOFT_I2C14_SDA
	            string "Set the GPIO of the I2C14 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C14
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C15
		        bool "Enable software I2C15 BUS"
		        default n
		        
	        config BSP_SOFT_I2C15_SCL
	            string "Set the GPIO of the I2C15 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C15
	            default "PH.4"
	            
	        config BSP_SOFT_I2C15_SDA
	            string "Set the GPIO of the I2C15 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C15
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C16
		        bool "Enable software I2C16 BUS"
		        default n
		        
	        config BSP_SOFT_I2C16_SCL
	            string "Set the GPIO of the I2C16 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C16
	            default "PH.4"
	            
	        config BSP_SOFT_I2C16_SDA
	            string "Set the GPIO of the I2C16 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C16
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C17
		        bool "Enable software I2C17 BUS"
		        default n
		        
	        config BSP_SOFT_I2C17_SCL
	            string "Set the GPIO of the I2C17 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C17
	            default "PH.4"
	            
	        config BSP_SOFT_I2C17_SDA
	            string "Set the GPIO of the I2C17 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C17
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C18
		        bool "Enable software I2C18 BUS"
		        default n
		        
	        config BSP_SOFT_I2C18_SCL
	            string "Set the GPIO of the I2C18 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C18
	            default "PH.4"
	            
	        config BSP_SOFT_I2C18_SDA
	            string "Set the GPIO of the I2C18 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C18
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C19
		        bool "Enable software I2C19 BUS"
		        default n
		        
	        config BSP_SOFT_I2C19_SCL
	            string "Set the GPIO of the I2C19 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C19
	            default "PH.4"
	            
	        config BSP_SOFT_I2C19_SDA
	            string "Set the GPIO of the I2C19 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C19
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C20
		        bool "Enable software I2C20 BUS"
		        default n
		        
	        config BSP_SOFT_I2C20_SCL
	            string "Set the GPIO of the I2C20 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C20
	            default "PH.4"
	            
	        config BSP_SOFT_I2C20_SDA
	            string "Set the GPIO of the I2C20 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C20
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C21
		        bool "Enable software I2C21 BUS"
		        default n
		        
	        config BSP_SOFT_I2C21_SCL
	            string "Set the GPIO of the I2C21 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C21
	            default "PH.4"
	            
	        config BSP_SOFT_I2C21_SDA
	            string "Set the GPIO of the I2C21 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C21
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C22
		        bool "Enable software I2C22 BUS"
		        default n
		        
	        config BSP_SOFT_I2C22_SCL
	            string "Set the GPIO of the I2C22 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C22
	            default "PH.4"
	            
	        config BSP_SOFT_I2C22_SDA
	            string "Set the GPIO of the I2C22 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C22
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C23
		        bool "Enable software I2C23 BUS"
		        default n
		        
	        config BSP_SOFT_I2C23_SCL
	            string "Set the GPIO of the I2C23 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C23
	            default "PH.4"
	            
	        config BSP_SOFT_I2C23_SDA
	            string "Set the GPIO of the I2C23 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C23
	            default "PH.5"
	            
