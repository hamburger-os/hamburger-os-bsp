	            string "Set the GPIO of the I2C55 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C55
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C56
		        bool "Enable software I2C56 BUS"
		        default n
		        
	        config BSP_SOFT_I2C56_SCL
	            string "Set the GPIO of the I2C56 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C56
	            default "PH.4"
	            
	        config BSP_SOFT_I2C56_SDA
	            string "Set the GPIO of the I2C56 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C56
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C57
		        bool "Enable software I2C57 BUS"
		        default n
		        
	        config BSP_SOFT_I2C57_SCL
	            string "Set the GPIO of the I2C57 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C57
	            default "PH.4"
	            
	        config BSP_SOFT_I2C57_SDA
	            string "Set the GPIO of the I2C57 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C57
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C58
		        bool "Enable software I2C58 BUS"
		        default n
		        
	        config BSP_SOFT_I2C58_SCL
	            string "Set the GPIO of the I2C58 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C58
	            default "PH.4"
	            
	        config BSP_SOFT_I2C58_SDA
	            string "Set the GPIO of the I2C58 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C58
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C59
		        bool "Enable software I2C59 BUS"
		        default n
		        
	        config BSP_SOFT_I2C59_SCL
	            string "Set the GPIO of the I2C59 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C59
	            default "PH.4"
	            
	        config BSP_SOFT_I2C59_SDA
	            string "Set the GPIO of the I2C59 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C59
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C60
		        bool "Enable software I2C60 BUS"
		        default n
		        
	        config BSP_SOFT_I2C60_SCL
	            string "Set the GPIO of the I2C60 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C60
	            default "PH.4"
	            
	        config BSP_SOFT_I2C60_SDA
	            string "Set the GPIO of the I2C60 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C60
	            default "PH.5"
        endif

    menuconfig BSP_USING_TIM
        bool "Enable timer"
        default n
        select RT_USING_HWTIMER
        if BSP_USING_TIM
            config BSP_USING_TIM1
                bool "Enable TIM1"
                default n
        endif

    menuconfig BSP_USING_PWM
        bool "Enable pwm"
        default n
        select RT_USING_PWM
        
        if BSP_USING_PWM
            menuconfig BSP_USING_PWM1
                bool "Enable TIM1 output pwm"
                default n
                
                if BSP_USING_PWM1
                    config BSP_USING_PWM1_CH1
                        bool "Enable PWM1 channel1"
                        default n
                        
                    config BSP_USING_PWM1_CH2
                        bool "Enable PWM1 channel2"
                        default n
                        
                    config BSP_USING_PWM1_CH3
                        bool "Enable PWM1 channel3"
                        default n
                        
                    config BSP_USING_PWM1_CH4
                        bool "Enable PWM1 channel4"
                        default n
                endif
        endif
        
    menuconfig BSP_USING_CPUTEMP
        bool "Enable CPU temperature"
        default n
        select BSP_USING_ADC
        
        if BSP_USING_CPUTEMP
            config CPUTEMP_ADC_DEV
                string "Set the adc temp device name used, default: adc1"
                default "adc1"
                
            config CPUTEMP_ADC_DEV_CHANNEL
                int "Set the adc temp device channel, default: 18"
                default 18
        endif

    menuconfig BSP_USING_ADC
        bool "Enable ADC"
        default n
        select RT_USING_ADC
        
        if BSP_USING_ADC
            config BSP_USING_ADC1
                bool "Enable ADC1"
                default n
            
            config BSP_USING_ADC2
                bool "Enable ADC2"
                default n
            
            config BSP_USING_ADC3
                bool "Enable ADC3"
                default n
        endif

    menuconfig BSP_USING_ONCHIP_RTC
        bool "Enable RTC"
        select RT_USING_RTC
        select RT_USING_LIBC
        default n
        if BSP_USING_ONCHIP_RTC
            choice
                prompt "Select clock source"
                default BSP_RTC_USING_LSE

                config BSP_RTC_USING_LSE
                    bool "RTC USING LSE"

                config BSP_RTC_USING_LSI
                    bool "RTC USING LSI"
            endchoice
        endif

    config BSP_USING_WDT
        bool "Enable Watchdog Timer"
        select RT_USING_WDT
        default y

    config BSP_USING_GPIO
        bool
        select RT_USING_PIN
        default y

    config BSP_USING_FMC
        bool
        default n
        
    config BSP_USING_SRAM
        bool
        default n
        
    config BSP_USING_LCD
        bool
        select BSP_USING_LTDC
        default n
        
    config BSP_USING_LTDC
        bool
        default n
        
    source "libraries/HAL_Drivers/Kconfig"
    
endmenu

menu "Onboard Peripheral Drivers"

    menuconfig BSP_USING_LED
        bool "Enable panel indicator led"
        default n
        if BSP_USING_LED
            comment "Three states of the LED:"
            comment "Blinking: the system is running or receiving and transmitting data"
            comment "Off: the system has no message or data receiving and sending"
            comment "On: system fault"
            
            config BSP_LED_CYCLE
                int "Set the flashing cycle of the indicator led, in ms, default: 100"
                default 100
                
            config BSP_LED_MAX
                int "Set the maximum number of supported LED lights, default: 8"
                default 8
            
            config BSP_USING_LED_RUN
                bool "Enable system operation indicator led"
                default n
                
            config LED_RUN_LEVEL
                int "Set LED_RUN lighting level, 0 low level, 1 high level"
                depends on BSP_USING_LED_RUN
                default 0
                
            config LED_RUN_GPIO
                string "Set the GPIO of the LED_RUN pin, default: PI.11"
                depends on BSP_USING_LED_RUN
                default "PI.11"
        endif
        
    menuconfig BSP_USING_ROOTFS
        bool "Enable rootfs"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select RT_USING_DFS_TMPFS
        select RT_USING_MODULE
        select PKG_USING_LITTLEFS
        default n
        if BSP_USING_ROOTFS
            comment "Please ensure that there is an mtd mor device with the names bin, etc, lib, usr present."
            
            config ROOTFS_USING_SELF_START
                bool "Enable self start scripts"
                default y
                
            config ROOTFS_SELF_START_PATH
                string "Set self start scripts path, default: /etc/rc.d"
                depends on ROOTFS_USING_SELF_START
                default "/etc/rc.d"
            
            config ROOTFS_USING_UPDATE
                bool "Enable update from udisk"
                default n
            
            config ROOTFS_UPDATE_DEVNAME
                string "Set storage device name, default: ud0p0"
                depends on ROOTFS_USING_UPDATE
                default "ud0p0"
                
            config ROOTFS_UPDATE_PATH
                string "Set firmware path, default: /mnt/udisk/ud0p0/rootfs/"
                depends on ROOTFS_USING_UPDATE
                default "/mnt/udisk/ud0p0/rootfs"

        endif

    menuconfig BSP_USING_FMCSRAM
        bool "Enable SRAM"
        select BSP_USING_FMC
        select BSP_USING_SRAM
        default n
        
        if BSP_USING_FMCSRAM
            config BSP_FMCSRAM_NE
	            hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
	            default (0x2)

            config BSP_FMCSRAM_ADDR
	            hex "Set the memory start address, default: ((void *)(0x60000000 + 0x4000000*1))"
	            default (0x64000000)
            
            config BSP_FMCSRAM_SIZE
	            int "Set memory size, default: (1 * 1024 * 1024)"
	            default (1048576)
	            
	        config BSP_FMCSRAM_BUS_WIDTH
                int "Set bus width, default: 16"
                default (16)
                
            config BSP_FMCSRAM_AddressSetupTime
                int "Set AddressSetupTime, default: 2"
                default (2)
                
            config BSP_FMCSRAM_DataSetupTime
                int "Set DataSetupTime, default: 2"
                default (2)
                
            config BSP_FMCSRAM_BusTurnAroundDuration
                int "Set BusTurnAroundDuration, default: 0"
                default (0)
                
            config BSP_FMCSRAM_ENABLE_BLK
                bool "Enable the block device"
                default n
                
            config BSP_FMCSRAM_ENABLE_FS
                bool "Enable the file system"
                depends on BSP_FMCSRAM_ENABLE_BLK
                select RT_USING_DFS
                select RT_USING_DFS_ROMFS
                select RT_USING_DFS_ELMFAT
                default n
            
            config BSP_FMCSRAM_FS
                string "Set the file system used, default: elm"
                depends on BSP_FMCSRAM_ENABLE_FS
                default "elm"
        endif
        
	menuconfig BSP_USING_SDRAM
        bool "Enable SDRAM"
        select BSP_USING_FMC
        default n
        
        if BSP_USING_SDRAM
        	config SDRAM_TARGET_BANK
	            int "Set the bank to use, example: FMC_SDRAM_BANK1: 1, FMC_SDRAM_BANK2: 2"
	            default (1)

            config SDRAM_BANK_ADDR
	            hex "Set the memory start address, example: FMC_SDRAM_BANK1: 0xC0000000, FMC_SDRAM_BANK2: 0xD0000000"
	            default (0xC0000000)
	            
	       	config SDRAM_DATA_WIDTH
	            int "Set data width, default: 16"
	            default (16)
	            
	        config SDRAM_COLUMN_BITS
	            int "Set column bits, default: 9"
	            default (9)
	            
	        config SDRAM_ROW_BITS
	            int "Set row bits, default: 13"
	            default (13)
	            
	       	config SDRAM_CAS_LATENCY
	            int "Set cas latency, default: 3"
	            default (3)
	            
	        config SDRAM_RPIPE_DELAY
	            int "Set rpipe delay, default: 1"
	            default (1)
	            
	        config SDCLOCK_PERIOD
	            int "Set clock period, default: 2"
	            default (2)
	            
	        config SDRAM_REFRESH_COUNT
	            hex "Set refresh count, default: 0x02AB"
	            default (0x02AB)
            
            config SDRAM_SIZE
	            int "Set memory size, default: (32 * 1024 * 1024)"
	            default (33554432)
	            
	        comment "Timing configuration for W9825G6KH-6"
	        comment "90 MHz of SD clock frequency (180MHz/2)"
	            
	        config LOADTOACTIVEDELAY
	            int "Set LOADTOACTIVEDELAY, TMRD: 2 Clock cycles, default: 2"
	            default (2)
	            
	        config EXITSELFREFRESHDELAY
	            int "Set EXITSELFREFRESHDELAY, TXSR: 7x11.90ns, default: 8"
	            default (8)
	            
	        config SELFREFRESHTIME
	            int "Set SELFREFRESHTIME, TRAS: 4x11.90ns, default: 6"
	            default (6)
	            
	        config ROWCYCLEDELAY
	            int "Set ROWCYCLEDELAY, TRC:  7x11.90ns, default: 6"
	            default (6)
	            
	        config WRITERECOVERYTIME
	            int "Set WRITERECOVERYTIME, TWR:  2 Clock cycles, default: 2"
	            default (2)
	            
	        config RPDELAY
	            int "Set RPDELAY, TRP:  2x11.90ns, default: 2"
	            default (2)
	            
	        config RCDDELAY
	            int "Set RCDDELAY, TRCD: 2x11.90ns, default: 2"
	            default (2)
	            
	        config SDRAM_MODEREG_BURST_LENGTH_1
	            hex "Set modereg burst length 1, default: 0x0000"
	            default (0x0000)
	            
	        config SDRAM_MODEREG_BURST_LENGTH_2
	            hex "Set modereg burst length 2, default: 0x0001"
	            default (0x0001)
	            
	        config SDRAM_MODEREG_BURST_LENGTH_4
	            hex "Set modereg burst length 4, default: 0x0002"
	            default (0x0002)
	            
	        config SDRAM_MODEREG_BURST_LENGTH_8
	            hex "Set modereg burst length 8, default: 0x0004"
	            default (0x0004)
	            
	        config SDRAM_MODEREG_BURST_TYPE_SEQUENTIAL
	            hex "Set modereg burst type sequential, default: 0x0000"
	            default (0x0000)
	            
	        config SDRAM_MODEREG_BURST_TYPE_INTERLEAVED
	            hex "Set modereg burst type interleaved, default: 0x0008"
	            default (0x0008)
	            
	        config SDRAM_MODEREG_CAS_LATENCY_2
	            hex "Set modereg cas latency 2, default: 0x0020"
	            default (0x0020)
	            
	        config SDRAM_MODEREG_CAS_LATENCY_3
	            hex "Set modereg cas latency 3, default: 0x0030"
	            default (0x0030)
	            
	        config SDRAM_MODEREG_OPERATING_MODE_STANDARD
	            hex "Set modereg operating mode standard, default: 0x0000"
	            default (0x0000)
	            
	        config SDRAM_MODEREG_WRITEBURST_MODE_PROGRAMMED
	            hex "Set modereg writeburst mode programmed, default: 0x0000"
	            default (0x0000)
	            
	        config SDRAM_MODEREG_WRITEBURST_MODE_SINGLE
	            hex "Set modereg writeburst mode single, default: 0x0200"
	            default (0x0200)
	            
	        config BSP_SDRAM_ENABLE_BLK
                bool "Enable the block device"
                default n
                
            config BSP_SDRAM_BLK_SIZE
                int "Set memory size, default: (8 * 1024 * 1024)"
                depends on BSP_SDRAM_ENABLE_BLK
                default (8388608)
                
            config BSP_SDRAM_ENABLE_FS
                bool "Enable the file system"
                depends on BSP_SDRAM_ENABLE_BLK
                select RT_USING_DFS
                select RT_USING_DFS_ROMFS
                select RT_USING_DFS_ELMFAT
                default n
            
            config BSP_SDRAM_FS
                string "Set the file system used, default: elm"
                depends on BSP_SDRAM_ENABLE_FS
                default "elm"
        endif
        
    menuconfig BSP_USING_LVGL
        bool "Enable LVGL for LCD"
        select PKG_USING_LVGL
        default n

        if BSP_USING_LVGL
            config LCD_WIDTH
                int "Set lcd width, default: 800"
                default (800)
                
            config LCD_HEIGHT
                int "Set lcd height, default: 600"
                default (600)
                
            config LCD_BITS_PER_PIXEL
                int "Set lcd bits per pixel, default: 16"
                default (16)
            
            choice
                prompt "Select lcd driver"
                default BSP_USING_LCD_LTDC

                config BSP_USING_LCD_LTDC
                    bool "Enable LCD LTDC"
                    select BSP_USING_LCD
                    select RT_TOUCH_PIN_IRQ
                    
                config BSP_USING_FMCLCD
                    bool "Enable LCD FMC"
                    select BSP_USING_FMC
                    select BSP_USING_SRAM
            endchoice
            
            if BSP_USING_LCD_LTDC
                config LCD_HSYNC_WIDTH
                    int "Set lcd hsync width, default: 1"
                    default (1)
                    
                config LCD_VSYNC_HEIGHT
                    int "Set lcd vsync height, default: 1"
                    default (1)
                    
                config LCD_HBP
                    int "Set lcd hbp, default: 40"
                    default (40)
                    
                config LCD_VBP
                    int "Set lcd vbp, default: 32"
                    default (32)
                    
                config LCD_HFP
                    int "Set lcd hfp, default: 48"
                    default (48)
                    
                config LCD_VFP
                    int "Set lcd vfp, default: 13"
                    default (13)
                    
                config LCD_USING_RGB2BGR
                    bool "Enable LCD RGB to BGR mode"
                    default y
                    
                choice
                    prompt "Select lcd backlight"
                    default LCD_BACKLIGHT_USING_GPIO
    
                    config LCD_BACKLIGHT_USING_PWM
                        bool "Enable BACKLIGHT PWM"
                        
                    config LCD_BACKLIGHT_USING_GPIO
                        bool "Enable BACKLIGHT GPIO"
                endchoice
                
                if LCD_BACKLIGHT_USING_GPIO
                    config LCD_BKLT_CTL_GPIO
                        string "Set the GPIO of the BKLT CTL, default: PC.6"
                        default "PC.6"
                endif

                config BSP_USING_LCD_TEST
                    bool "Enable lcd test"
                    default n
            endif
            
            if BSP_USING_FMCLCD
                config BSP_FMCLCD_NE
                    hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
                    default (0x6)
    
                config BSP_FMCLCD_BASE
                    hex "Set the base address, default: NE4 A6 ---> ((uint32_t)((0x60000000 + 0x4000000*(NE4 - 1)) | (1 << (A6 + 1))))"
                    default (0x6C000080)
                    
                config BSP_FMCLCD_BL_PIN
                    string "Set the lcd bl pin, default: PB.15"
                    default "PB.15"
                
                config BSP_USING_FMCLCD_TEST
                    bool "Enable fmclcd test"
                    default n
            endif
            
            choice
                prompt "Select touch driver"
                default BSP_USING_NONETOUCH
                
                config BSP_USING_NONETOUCH
                    bool "Disable TOUCH"

                config BSP_USING_TOUCH
                    bool "Enable TOUCH"
                    select RT_USING_TOUCH
                    select RT_TOUCH_PIN_IRQ
            endchoice
            
            if BSP_USING_TOUCH
                choice
                    prompt "Select touch driver"
                    default TOUCH_USING_SW
                    
                    config TOUCH_USING_SW
                        bool "Enable touch driver sw"
                    
                    config TOUCH_USING_XPT2046
                        bool "Enable touch driver xpt2046"
                endchoice
                
                config TOUCH_IRQ_PIN
                    string "pin name for the irq pin, default: PC.14"
                    default "PC.14"
                
                if TOUCH_USING_SW
                    config TOUCH_SW_SPI_BUS
                        string "Set the spi bus used, default: spi2"
                        default "spi2"
                        
                    config TOUCH_SW_CS_PIN
                        string "pin name for the chip select pin, default: PB.12"
                        default "PB.12"
                        
                    config TOUCH_SW_SPI_SPEED
                        int "Set the rate of spi, default: (2 * 1000 *1000)"
                        default (2000000)
                endif
                
                if TOUCH_USING_XPT2046
                    config TOUCH_XPT2046_SPI_BUS
                        string "Set the spi bus used, default: sspi1"
                        default "sspi1"
                        
                    config TOUCH_XPT2046_CS_PIN
                        string "pin name for the chip select pin, default: PC.13"
                        default "PC.13"
                        
                    config TOUCH_XPT2046_SPI_SPEED
                        int "Set the rate of spi, default: (2 * 1000 *1000)"
                        default (2000000)
                endif
            endif
            
            choice
                prompt "Select demo"
                default BSP_USING_LVGL_WIDGETS_DEMO

                config BSP_USING_LVGL_WIDGETS_DEMO
                    bool "Enable demo widgets"
                    select PKG_LVGL_USING_DEMOS
                    
                config BSP_USING_LVGL_BENCHMARK_DEMO
                    bool "Enable demo benchmark"
                    select PKG_LVGL_USING_DEMOS
                    
                config BSP_USING_LVGL_STRESS_DEMO
                    bool "Enable demo stress"
                    select PKG_LVGL_USING_DEMOS
                    
                config BSP_USING_LVGL_KEYPAD_AND_ENCODER_DEMO
                    bool "Enable demo keypad and encoder"
                    select PKG_LVGL_USING_DEMOS
                    
                config BSP_USING_LVGL_MUSIC_DEMO
                    bool "Enable demo music"
                    select PKG_LVGL_USING_DEMOS
                    
                config BSP_USING_LVGL_DEMO
                    bool "Enable demo calendar"
            endchoice
            
            if BSP_USING_LVGL_WIDGETS_DEMO
                config LVGL_WIDGETS_DEMO_SLIDESHOW
                    bool "Enable demo widgets slideshow"
                    default n
            endif
            
            if BSP_USING_LVGL_MUSIC_DEMO
                config LVGL_MUSIC_DEMO_SQUARE
                    bool "Enable demo music square"
                    default y
                    
                config LVGL_MUSIC_DEMO_LANDSCAPE
                    bool "Enable demo music landscape"
                    default n
                    
                config LVGL_MUSIC_DEMO_ROUND
                    bool "Enable demo music round"
                    default y
                    
                config LVGL_MUSIC_DEMO_LARGE
                    bool "Enable demo music large"
                    default n
                    
                config LVGL_MUSIC_DEMO_AUTO_PLAY
                    bool "Enable demo music auto play"
                    default y
            endif
        endif
        
    menuconfig BSP_USING_WM8978
        bool "Enable WM8978, a low power, high quality stereo CODEC"
        select RT_USING_AUDIO
        select RT_USING_MEMPOOL
        select BSP_USING_I2S
        default n

        if BSP_USING_WM8978
            config WM8978_I2C_DEV
                string "Set the i2c device name used, default: i2c1"
                default "i2c1"
        endif
        
    menuconfig BSP_USING_ADAU1761
        bool "Enable adau1761, SigmaDSP Stereo, Low Power, 96 kHz, 24-Bit Audio Codec with Integrated PLL"
        select RT_USING_AUDIO
        select RT_USING_MEMPOOL
        select BSP_USING_I2S
        default n

        if BSP_USING_ADAU1761
            config ADAU1761_I2C_DEV
                string "Set the i2c device name used, default: i2c1"
                default "i2c1"
                
            config ADAU1761_I2C_ADD
                hex "Set the i2c device address, default: 0x38"
                default (0x38)
                
            choice
                prompt "Select the Clock source"
                default ADAU1761_CLKSRC_PLL
                
                config ADAU1761_CLKSRC_MCLK
                    bool "direct from MCLK pin"
                
                config ADAU1761_CLKSRC_PLL
                    bool "PLL clock"
            endchoice
            
            if ADAU1761_CLKSRC_MCLK
                choice
                    prompt "Select the core clock rate that generates the core clock"
                    default ADAU1761_CLKSRC_MCLK256
                    
                    config ADAU1761_CLKSRC_MCLK256
                        bool "256  fS"
                    
                    config ADAU1761_CLKSRC_MCLK512
                        bool "512  fS"
                        
                    config ADAU1761_CLKSRC_MCLK768
                        bool "768  fS"
                        
                    config ADAU1761_CLKSRC_MCLK1024
                        bool "1024  fS"
                endchoice
            endif
                
            if ADAU1761_CLKSRC_PLL
                choice
                    prompt "Select the MCLK frequency"
                    default ADAU1761_MCLK_12
                    
                    config ADAU1761_MCLK_8
                        bool "Select MCLK 8MHz"
                    
                    config ADAU1761_MCLK_12
                        bool "Select MCLK 12MHz"
                        
                    config ADAU1761_MCLK_12288
                        bool "Select MCLK 12.288MHz"
                        
                    config ADAU1761_MCLK_24576
                        bool "Select MCLK 24.576MHz"
                endchoice
            endif
                
            config ADAU1761_USING_PWR_PIN
                bool "Enable audio power pin"
                default n
                
            config ADAU1761_PWR_PIN
                string "Set the GPIO of the audio power pin, default: PA.8"
                depends on ADAU1761_USING_PWR_PIN
                default "PA.8"
                
            config ADAU1761_USING_AMP_PIN
                bool "Enable amplifier switch pin"
                default n
                
            config ADAU1761_AMP_PIN
                string "Set the GPIO of the Power amplifier switch pin, default: PH.6"
                depends on ADAU1761_USING_AMP_PIN
                default "PH.6"
        endif
        
    menuconfig BSP_USING_NORFLASH
        bool "Enable NORFLASH"
        select BSP_USING_FMC
        select RT_USING_MTD_NOR
        default n
        
        if BSP_USING_NORFLASH
            config BSP_NORFLASH_NE
	            hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
	            default (0x0)

            config BSP_NORFLASH_ADDR
	            hex "Set the memory start address, example: NOR_MEMORY_ADRESS1: 0x60000000, NOR_MEMORY_ADRESS3: 0x68000000"
	            default (0x60000000)
            
            config NORFLASH_RST
	            string "Set the GPIO of the reset pin, default: PG.15"
	            default "PG.15"
            
            config NORFLASH_SIZE_GRANULARITY_TOTAL
	            int "Set storage space size, default: (32 * 1024 * 1024)"
	            default (33554432)
            
            config NORFLASH_BLK_SIZE
	            int "Set the memory block size, default: (128 * 1024)"
	            default (131072)
	            
	        config BSP_NORFLASH_BUS_WIDTH
                int "Set bus width, default: 16"
                default (16)
                
            config BSP_NORFLASH_AddressSetupTime
                int "Set AddressSetupTime, default: 11"
                default (11)
                
            config BSP_NORFLASH_DataSetupTime
                int "Set DataSetupTime, default: 16"
                default (16)
                
            config BSP_NORFLASH_BusTurnAroundDuration
                int "Set BusTurnAroundDuration, default: 0"
                default (0)
                
            config NORFLASH_SIZE_APP
                int "Set application part size, default: (0 * 1024)"
                default (0)
	            
	        config NORFLASH_SIZE_DOWNLOAD
                int "Set download part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_FACTORY
                int "Set factory part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_BIN
                int "Set bin part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_ETC
                int "Set etc part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_LIB
                int "Set lib part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_USR
                int "Set usr part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_KVDB
                int "Set kvdb part size, default: (2048 * 1024)"
                default (2097152)
                
            config NORFLASH_SIZE_TSDB
                int "Set tsdb part size, default: (0 * 1024)"
                default (0)
                
            config NORFLASH_ENABLE_FS
                bool "Enable the file system"
                select RT_USING_DFS
                select RT_USING_DFS_ROMFS
                select PKG_USING_LITTLEFS
                default y
            
            config NORFLASH_FS
	            string "Set the file system used, default: lfs"
	            depends on NORFLASH_ENABLE_FS
	            default "lfs"
	            
	        config NORFLASH_ENABLE_BUFFER_PROGRAM
	        	bool "Enable buffered writes"
	        	default y
	        	
	       	config NORFLASH_BUFFER_PROGRAM_MAX
	        	int "Maximum buffer write length, default: 64"
	        	depends on NORFLASH_ENABLE_BUFFER_PROGRAM
	        	default (64)
	        	
	        config NORFLASH_ENABLE_TEST
                bool "Enable test cmd"
                default n
        endif

    menuconfig BSP_USING_FM25xx
        bool "Enable fram FM25xx"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select PKG_USING_LITTLEFS
        default n
        
        if BSP_USING_FM25xx
            config BSP_FM25xx_SPI_BUS
	            string "Set the spi bus used, default: spi1"
	            default "spi1"
	            
            config BSP_FM25xx_SPI_CS_PIN
	            string "Set the pin of the chip select, default: PC.3"
	            default "PC.3"
            
            config BSP_FM25xx_SPI_SPEED
	            int "Set the rate of spi, default: (40 * 1000 *1000)"
	            default (40000000)
            
            config FM25xx_SIZE_GRANULARITY_TOTAL
	            int "Set storage space size, default: (128 * 1024)"
	            default (131072)
            
            config FM25xx_BLK_SIZE
	            int "Set the memory block size, default: (512)"
	            default (512)
            
            config FM25xx_FS
	            string "Set the file system used, default: lfs"
	            default "lfs"
	            
	        config FM25xx_ENABLE_TEST
                bool "Enable test cmd"
                default n
        endif
        
    menuconfig BSP_USING_SPI_FLASH
        bool "Enable SPI FLASH (sfud: JEDEC JESD216)"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select PKG_USING_LITTLEFS
        select RT_USING_SFUD
        select RT_SFUD_USING_SFDP
        default n
        
        if BSP_USING_SPI_FLASH
            config BSP_SPI_FLASH_SPI_BUS
                string "Set the spi bus used, default: spi1"
                default "spi1"
                
            config BSP_SPI_FLASH_SPI_CS_PIN
                string "Set the pin of the chip select, default: PB.14"
                default "PB.14"
                
            config BSP_SPI_FLASH_SPI_SPEED
                int "Set the rate of spi, default: (40 * 1000 *1000)"
                default (40000000)
            
            config SPI_FLASH_SIZE_GRANULARITY_TOTAL
                int "Set storage space size, default: (64 * 1024 * 1024)"
                default (67108864)
            
            config SPI_FLASH_BLK_SIZE
                int "Set the memory block size, default: (262144)"
                default (262144)
            
            config SPI_FLASH_FS
                string "Set the file system used, default: lfs"
                default "lfs"
                
            config SPI_FLASH_ENABLE_TEST
                bool "Enable test cmd"
                default n
        endif
        
    menuconfig BSP_USING_S25FL512
        bool "Enable SPI FLASH (S25FL512)"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select PKG_USING_LITTLEFS
        default n
        
        if BSP_USING_S25FL512
            config BSP_S25FL512_SPI_BUS
                string "Set the spi bus used, default: spi1"
                default "spi1"
                
            config BSP_S25FL512_SPI_CS_PIN
                string "Set the pin of the chip select, default: PB.14"
                default "PB.14"
                
            config BSP_S25FL512_SPI_SPEED
                int "Set the rate of spi, default: (40 * 1000 *1000)"
                default (40000000)
            
            config S25FL512_SIZE_GRANULARITY_TOTAL
                int "Set storage space size, default: (64 * 1024 * 1024)"
                default (67108864)
            
            config S25FL512_BLK_SIZE
                int "Set the memory block size, default: (262144)"
                default (262144)
            
            config S25FL512_FS
                string "Set the file system used, default: lfs"
                default "lfs"
        endif
        
    menuconfig BSP_USING_AT45DB321E
        bool "Enable SPI FLASH (AT45DB321E)"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select PKG_USING_LITTLEFS
        default n
        
        if BSP_USING_AT45DB321E
            config BSP_AT45DB321E_SPI_BUS
                string "Set the spi bus used, default: spi2"
                default "spi2"
                
            config BSP_AT45DB321E_SPI_CS_PIN
                string "Set the pin of the chip select, default: PA.15"
                default "PA.15"
                
            config BSP_AT45DB321E_SPI_SPEED
                int "Set the rate of spi, default: (40 * 1000 *1000)"
                default (40000000)
            
            config AT45DB321E_SIZE_GRANULARITY_TOTAL
                int "Set storage space size, default: (4 * 1024 * 1024)"
                default (4194304)
            
            config AT45DB321E_BLK_SIZE
                int "Set the memory block size, default: (4096)"
                default (4096)
            
            config AT45DB321E_FS
                string "Set the file system used, default: lfs"
                default "lfs"
        endif
        
    menuconfig BSP_USING_EMMC
        bool "Enable EMMC"
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select PKG_USING_LITTLEFS
        select RT_USING_DFS_ELMFAT
        default n
        
        if BSP_USING_EMMC            
            choice
                prompt "Select the bus wide"
                default BSP_SDIO_BUS_WIDE_4B
                
                config BSP_SDIO_BUS_WIDE_4B
                    bool "Select bus wide 4b"
    
                config BSP_SDIO_BUS_WIDE_8B
                    bool "Select bus wide 8b"
            endchoice
                
	        config BSP_SDIO_RX_USING_DMA
                bool "Enable SDIO RX DMA"
                depends on SOC_SERIES_STM32F4
                default y
                
            config BSP_SDIO_TX_USING_DMA
                bool "Enable SDIO TX DMA"
                depends on SOC_SERIES_STM32F4
                default y
                
            config BSP_SDIO_USING_CTRL
                bool "Enable SDIO power ctrl pin"
                default n
                
            config BSP_SDIO_CTRL_PIN
                string "Set SDIO power ctrl pin, default: PG.10"
                depends on BSP_SDIO_USING_CTRL
                default "PG.10"
            
            config EMMC_FS
	            string "Set the file system used, default: elm"
	            default "elm"
        endif
        
    menuconfig BSP_USING_SDCARD
        bool "Enable SDIO or SDMMC"
        select BSP_USING_SDIO
        select RT_USING_DFS
        select RT_USING_DFS_ROMFS
        select RT_USING_DFS_TMPFS
        select RT_USING_DFS_ELMFAT
        default n
        
        if BSP_USING_SDCARD
            config BSP_SDIO_RX_USING_DMA
                bool
                depends on SOC_SERIES_STM32F4
                default y
                
            config BSP_SDIO_TX_USING_DMA
                bool
                depends on SOC_SERIES_STM32F4
                default y
            
            config SDCARD_FS
                string "Set the file system used, default: elm"
                default "elm"
        endif
        
    menuconfig BSP_USING_KSZ8851
        bool "Enable NETDEV KSZ8851 (KSZ8851-16MLLU)"
        select BSP_USING_FMC
        select BSP_USING_SRAM
        select RT_USING_SAL
        select RT_USING_LWIP
        select RT_USING_POSIX_FS
        select RT_USING_POSIX_SOCKET
        select PKG_USING_FLASHDB_PORT
        default n
        
        if BSP_USING_KSZ8851
            config BSP_USING_KSZ8851_RX_DUMP
                bool "Enable KSZ8851 RX DUMP"
                default n
                
            config BSP_USING_KSZ8851_TX_DUMP
                bool "Enable KSZ8851 TX DUMP"
                default n
                
            config BSP_USING_KSZ8851_ADDRESSSETUPTIME
                int "Set the AddressSetupTime, default: 4"
                default (4)
                
            config BSP_USING_KSZ8851_DATASETUPTIME
                int "Set the DataSetupTime, default: 20"
                default (20)
                
            config BSP_USING_KSZ8851_BUSTURNAROUNDDURATION
                int "Set the BusTurnAroundDuration, default: 8"
                default (8)
            
            menuconfig BSP_USE_ETH1
                bool "Enable ETH port 1"
                default n
	        
                if BSP_USE_ETH1
                  	config ETH1_NE
                          hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
                          default (0x4)
                  
                    config ETH1_CMD
                        hex "Set the cmd address, default: NE3 A0 ---> ((uint32_t)((0x60000000 + 0x4000000*(NE3 - 1)) | (1 << (A0 + 1))))"
                        default (0x68000002)
                    
                    config ETH1_RST
                        string "Set the GPIO of the reset pin, default: PG.14"
                        default "PG.14"
                    
                    config ETH1_ISR
                        string "Set the GPIO of the isr pin, default: PH.2"
                        default "PH.2"
                endif

            menuconfig BSP_USE_ETH2
                bool "Enable ETH port 2"
                default n

                if BSP_USE_ETH2
                    config ETH2_NE
                        hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
                        default (0x6)
                    
                    config ETH2_CMD
                        hex "Set the cmd address, default: NE4 A0 ---> ((uint32_t)((0x60000000 + 0x4000000*(NE4 - 1)) | (1 << (A0 + 1))))"
                        default (0x6C000002)
                        
                    config ETH2_RST
                        string "Set the GPIO of the reset pin, default: PG.14"
                        default "PG.14"
                    
                    config ETH2_ISR
                        string "Set the GPIO of the isr pin, default: PH.3"
                        default "PH.3"
      	        endif
          
            menuconfig BSP_USE_ETH3
                bool "Enable ETH port 3"
                default n
            
                if BSP_USE_ETH3
                    config ETH3_NE
                        hex "Set the bank to use, example: FMC_NORSRAM_BANK2: 0x2, FMC_NORSRAM_BANK4: 0x6"
                        default (0x2)
                    
                    config ETH3_CMD
                        hex "Set the cmd address, default: NE2 A0 ---> ((uint32_t)((0x60000000 + 0x4000000*(NE2 - 1)) | (1 << (A0 + 1))))"
                        default (0x64000002)
                          
                    config ETH3_RST
                        string "Set the GPIO of the reset pin, default: PA.0"
                        default "PA.0"
                        
                    config ETH3_ISR
                        string "Set the GPIO of the isr pin, default: PA.1"
                        default "PA.1"
                endif
          
            menuconfig BSP_USE_LINK_LAYER_COMMUNICATION
                bool "Enable Link Layer Communication"
                default n
            
                if BSP_USE_LINK_LAYER_COMMUNICATION
                    config BSP_USE_ETH1_LINK_LAYER
                        bool "enable eth1 link layer communication"
                        default n
                        
                    config BSP_USE_ETH2_LINK_LAYER
                        bool "enable eth2 link layer communication"
                        default n
                        
                    config BSP_USE_ETH3_LINK_LAYER
                        bool "enable eth3 link layer communication"
                        default n
                endif
        endif
        
    menuconfig BSP_USING_ETH
        bool "Enable Ethernet"
        select RT_LWIP_USING_HW_CHECKSUM
        select RT_USING_SAL
        select RT_USING_LWIP
        select RT_USING_POSIX_FS
        select RT_USING_POSIX_SOCKET
        default n
        
        if BSP_USING_ETH
            config PHY_RST_PIN
                string "Set phy rst pin, default: PD.3"
                default "PD.3"
        
            config PHY_USING_INTERRUPT_MODE
                bool "Enable interrupt mode"
                default n
                
            config PHY_INT_PIN
                string "Set phy int pin, default: PA.1"
                depends on PHY_USING_INTERRUPT_MODE
                default "PA.1"
            
            config ETH_RX_DUMP
                bool "Enable rx dump"
                default n
                
            config ETH_TX_DUMP
                bool "Enable tx dump"
                default n
                
            choice
                prompt "Select eth used phy"
                default PHY_USING_LAN8720A
                
                config PHY_USING_LAN8720A
                    bool "Select phy LAN8720A"
                    
                config PHY_USING_LAN8742A
                    bool "Select phy LAN8742A"
    
                config PHY_USING_DM9161CEP
                    bool "Select phy DM9161CEP"
                    
                config PHY_USING_DP83848C
                    bool "Select phy DP83848C"
            endchoice
        endif
        
    menuconfig BSP_USING_MAX31826
        bool "Enable Temperature Sensor (MAX31826MUA+)"
        select RT_USING_PIN
        select RT_USING_SENSOR
        default n
        
        if BSP_USING_MAX31826
			choice
				prompt "Select io or iic mode"
				default MAX31826_USING_IO
			  
				config MAX31826_USING_I2C_DS2484
					bool "iic mode(ds2484)"
			      
				config MAX31826_USING_IO
					bool "io mode"
	        endchoice
	        
	        config MAX31826_SIZE_GRANULARITY_TOTAL
                int "Set storage space size, default: (128)"
                default (128)
            
            config MAX31826_BLK_SIZE
                int "Set the memory block size, default: (8)"
                default (8)
	        
		if MAX31826_USING_IO
			config MAX31826_GPIO
				string "Set the GPIO of the sensor pin, default: PI.8"
				default "PI.8"
		endif
          
		if MAX31826_USING_I2C_DS2484
			config DS2484_I2C_DEV
				string "Set the i2c device name used, default: i2c2"
				default "i2c2"
			  
			config DS2484_I2C_ADD
				hex "Set the i2c device address, default: 0x18"
				default (0x18)
		endif
	endif
        
    menuconfig BSP_USING_DS1682
        bool "Enable integrated elapsed-time recorder (DS1682S+)"
        select RT_USING_SENSOR
        default n
        
        if BSP_USING_DS1682
            config DS1682_I2C_DEV
		        string "Set the i2c device name used, default: i2c2"
		        default "i2c2"
		        
		    config DS1682_I2C_ADD
		        hex "Set the i2c device address, default: 0x6B"
		        default (0x6B)
        endif
        
    menuconfig BSP_USING_EEPROM_24Cxx
        bool "Enable electrically erasable and programmable read-only memory (EEPROM) (HG24C02)"
        default n
        
        if BSP_USING_EEPROM_24Cxx
            config EEPROM_24Cxx_I2C_DEV
		        string "Set the i2c device name used, default: i2c2"
		        default "i2c2"
		        
		    config EEPROM_24Cxx_I2C_ADD
		        hex "Set the i2c device address, default: 0x50"
		        default (0x50)
		        
		    config EEPROM_24Cxx_SIZE_GRANULARITY_TOTAL
	            int "Set storage space size, default: (256)"
	            default (256)
            
            config EEPROM_24Cxx_BLK_SIZE
	            int "Set the memory block size, default: (8)"
	            default (8)
	            
	        config EEPROM_24Cxx_ENABLE_TEST
                bool "Enable test cmd"
                default n
        endif
        
    menuconfig BSP_USING_TCA9555
        bool "Enable I/O expander (TCA9555)"
        default n
        
        if BSP_USING_TCA9555
        	config TCA9555_I2C_DEVNAME
		        string "Set the i2c device name used, default: si2c"
		        default "si2c"
        endif
        
    menuconfig BSP_USING_LTC2945
        bool "Enable Wide Range I2C Power Monitor (LTC2945)"
        default n
        
        if BSP_USING_LTC2945
            config LTC2945_I2C_DEV
		        string "Set the i2c device name used, default: i2c1"
		        default "i2c1"
		        
		    config LTC2945_I2C_ADD
		        hex "Set the i2c device address, default: 0x6C"
		        default (0x6C)
        endif
        
    menuconfig BSP_USING_LTC2991
        bool "Enable Octal I2C Voltage, Current, and Temperature Monitor (LTC2991)"
        default n
        
        if BSP_USING_LTC2991
            config LTC2991_I2C_DEV
		        string "Set the i2c device name used, default: i2c1"
		        default "i2c1"
		        
		    config LTC2991_I2C_ADD
		        hex "Set the i2c device address, default: 0x48"
		        default (0x48)
        endif
        
    menuconfig BSP_USING_DS28E01
        bool "Enable Protected 1-wire EEPROM (DS28E01)"
        default n
        
        if BSP_USING_DS28E01
            config DS28E01_GPIO
                string "Set the GPIO of the sensor pin, default: PG.7"
                default "PG.7"
        endif
        
    menuconfig BSP_USING_ICCARD_FLASH
        bool "Enable ic card flash (hnthinker)"
        default n
        
        if BSP_USING_ICCARD_FLASH
            config BSP_ICCARD_FLASH_SPI_BUS
                string "Set the spi bus used, default: spi1"
                default "spi1"
                
            config BSP_ICCARD_FLASH_SPI_CS_PIN
                string "Set the pin of the chip select, default: PA.4"
                default "PA.4"
                
            config BSP_ICCARD_FLASH_SPI_SPEED
                int "Set the rate of spi, default: (2 * 1000 *1000)"
                default (2000000)
                
            config BSP_ICCARD_FLASH_POWER_PIN
                string "Set the pin of the power, default: PB.10"
                default "PB.10"
                
            config BSP_ICCARD_FLASH_BUSY_PIN
                string "Set the pin of the busy, default: PB.11"
                default "PB.11"
                
            config BSP_ICCARD_FLASH_RST_PIN
                string "Set the pin of the reset, default: PB.0"
                default "PB.0"
                
            config BSP_ICCARD_FLASH_ISR_PIN
                string "Set the pin of the isr, default: PA.12"
                default "PA.12"
        endif
        
    menuconfig BSP_USING_LTC186X
        bool "Enable The LTC1864/LTC1865 are 16-bit A/D converters"
        select RT_USING_ADC
        default n
        
        if BSP_USING_LTC186X
            config BSP_LTC186X_SPI_BUS
                string "Set the spi bus used, default: sspi2"
                default "sspi2"
                
            config BSP_LTC186X_SPI_CS_PIN
                string "Set the pin of the chip select, default: PA.15"
                default "PA.15"
                
            config BSP_LTC186X_SPI_SPEED
                int "Set the rate of spi, default: (20 * 1000 *1000)"
                default (20000000)
                
            config BSP_LTC186X_RESOLUTION
                int "Set the resolution, default: (16)"
                default (16)
                
            config BSP_LTC186X_VREF
                int "Set the vref, default: (50000)"
                default (50000)
        endif
        
    menuconfig BSP_USING_GNSS
        bool "Enable GNSS with uart"
        select PKG_USING_LWGPS
        default n
        
        if BSP_USING_GNSS
            config BSP_GNSS_DEVNAME
                string "Set the uart used, default: uart4"
                default "uart4"
                
            config BSP_GNSS_DEFAULT_RATE
                int "Set the uart default baudrate, default: (9600)"
                default (9600)
                
            config BSP_GNSS_RATE
                int "Set the uart baudrate, default: (115200)"
                default (115200)
                
            config BSP_GNSS_BUFFER_SIZE
                int "Set the uart buffer size, default: (1024)"
                default (1024)
                
            config BSP_GNSS_USING_POWER_PIN
                bool "Enable GNSS power pin"
                default n
                
            config BSP_GNSS_POWER_PIN
                string "Set the pin of the power, default: PC.13"
                depends on BSP_GNSS_USING_POWER_PIN
                default "PC.13"
        endif
        
      menuconfig BSP_USING_KSZ8794
        bool "Enable ksz8794"
        default n
        
        if BSP_USING_KSZ8794
            config BSP_KSZ8794_SPI_BUS
              string "Set the spi bus used, default: spi5"
              default "spi5"
              
            config BSP_KSZ8794_SPI_CS_PIN
              string "Set the pin of the chip select, default: PF.6"
              default "PF.6"
            
            config BSP_KSZ8794_SPI_SPEED
              int "Set the rate of spi, default: (40 * 1000 *1000)"
              default (40000000)
              
            config BSP_KSZ8794_IRQ_PIN
              string "Set the pin of the chip irq, default: PI.4"
              default "PI.4"
              
            config BSP_KSZ8794_RST_PIN
              string "Set the pin of the chip rst, default: PI.7"
              default "PI.7"
        endif
        
endmenu

endmenu

menu "Supported Package and Modules"
        
    source "packages/Kconfig"

endmenu

menu "Supported applications and examples"
        
    source "applications/Kconfig"

endmenu
