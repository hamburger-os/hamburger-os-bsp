	            string "Set the GPIO of the I2C53 sda pin, default: PH.5"
	            depends on BSP_USING_SOFT_I2C53
	            default "PH.5"
	            
	        menuconfig BSP_USING_SOFT_I2C54
		        bool "Enable software I2C54 BUS"
		        default n
		        
	        config BSP_SOFT_I2C54_SCL
	            string "Set the GPIO of the I2C54 scl pin, default: PH.4"
	            depends on BSP_USING_SOFT_I2C54
	            default "PH.4"
	            
