menuconfig PKG_USING_FFFEFRAME
    bool "Enable FF-FE serial communication protocol framework"
    default n
    
    if PKG_USING_FFFEFRAME
        config PKG_FFFEFRAME_USING_EXAMPLE
            bool "Enable FF-FE serial communication protocol framework example"
            default n
            
        config PKG_FFFEFRAME_EXAMPLE_DEVNAME
            string "Set the device address used, default : uart7"
            depends on PKG_FFFEFRAME_USING_EXAMPLE
            default "uart7"
    endif
    
menuconfig PKG_USING_HDLC7c7eFRAME
    bool "Enable hdlc 7c7e serial communication protocol framework"
    default n
    
    if PKG_USING_HDLC7c7eFRAME
        config PKG_HDLC7c7eFRAME_USING_EXAMPLE
            bool "Enable hdlc 7c7e serial communication protocol framework example"
            default n
            
        config PKG_HDLC7c7eFRAME_EXAMPLE_DEVNAME
            string "Set the device address used, default : uart7"
            depends on PKG_HDLC7c7eFRAME_USING_EXAMPLE
            default "uart7"
    endif
    
menuconfig PKG_USING_SYSINFO
    bool "Enable systerm info"
    default n
    
    if PKG_USING_SYSINFO
        config SYSINFO_PARTNAME
            string "Set the partition name used, default : max31826"
            default "max31826"
            
        config SYSINFO_PARTSIZE
            int "Set the partition size, default: 128"
            default (128)
    endif

menuconfig PKG_USING_ULOG_BACK
    bool "Enable the ulog backend"
    select RT_USING_ULOG
    default n
    
    if PKG_USING_ULOG_BACK
        choice
            prompt "Select the output mode of the ulog backend"
            default ULOG_BACK_USING_FILE
            
            config ULOG_BACK_USING_FILE
                bool "Enable the ulog file"
                select ULOG_BACKEND_USING_FILE
                
            config ULOG_BACK_USING_TSDB
                bool "Enable the ulog tsdb"
                select PKG_USING_FLASHDB_PORT
                
            config ULOG_BACK_USING_TSDB_FILE
                bool "Enable the ulog tsdb file"
                select PKG_USING_FLASHDB_PORT
        endchoice

        config ULOG_BACK_DIR_PATH
            string "Set the ulog output dir path, default: /mnt/emmc/ulog"
            depends on ULOG_BACK_USING_FILE
            default "/mnt/emmc/ulog"

        config ULOG_BACK_FILE_MAX_NUM
            int "Set the ulog file max num, default: 16"
            depends on ULOG_BACK_USING_FILE
            default (16)
            
        config ULOG_BACK_FILE_MAX_SIZE
            int "Set the ulog file max size, must be larger than buf size, default: 512 * 1024"
            depends on ULOG_BACK_USING_FILE
            default (524288)
            
        config ULOG_BACK_FILE_BUF_SIZE
            int "Set the ulog file buf size, default: 512"
            depends on ULOG_BACK_USING_FILE
            default (512)
    endif
    
menuconfig PKG_USING_FLASHDB_PORT
    bool "Enable the FlashDB port support"
    select PKG_USING_FLASHDB
    default n
    
    if PKG_USING_FLASHDB_PORT
        config FLASHDB_PORT_USING_KVDB
            bool "Enable kvdb"
            select FDB_USING_KVDB
            default y
            
        config FLASHDB_PORT_KVDB_PARTNAME
            string "Set the FlashDB kvdb part name, default: kvdb"
            depends on FLASHDB_PORT_USING_KVDB
            default "kvdb"
            
        config FLASHDB_PORT_USING_TSDB
            bool "Enable tsdb"
            select FDB_USING_TSDB
            default n
            
        config FLASHDB_PORT_TSDB_PARTNAME
            string "Set the FlashDB tsdb part name, default: tsdb"
            depends on FLASHDB_PORT_USING_TSDB
            default "tsdb"
    endif
    
menuconfig PKG_USING_AMRPLAYER
    bool "Enable amrplayer library"
    select PKG_USING_OPTPARSE
    select PKG_USING_3GPP_AMRNB
    default n
    
    if PKG_USING_AMRPLAYER
        config AMRPLAYER_USING_PLAY
            bool "Enable audio playback"
            default n
            
        config AMRPLAYER_PLAY_DEVICE
            string "Set audio playback device, default: sound0"
            depends on AMRPLAYER_USING_PLAY
            default "sound0"
            
        config AMRPLAYER_USING_RECORD
            bool "Enable audio record"
            default n
            
        config AMRPLAYER_RECORD_DEVICE
            string "Set audio record device, default: sound0"
            depends on AMRPLAYER_USING_RECORD
            default "sound0"
    endif
    
menuconfig PKG_USING_MPY_PORT
    bool "Enable MicroPython library"
    select PKG_USING_MICROPYTHON
    default n
    
    if PKG_USING_MPY_PORT
        config MPY_PORT_WORKING_DIR
            string "Set working directory, default: /mnt/nor"
            default "/mnt/nor"
            
        config MPY_PORT_USING_EXEC_DEFAULT
            bool "Set MicroPython automatically execute the default script"
            default n
            
        config MPY_PORT_DEFAULT_SCRIPT
            string "Set default script, default: /mnt/nor/main.py"
            depends on MPY_PORT_USING_EXEC_DEFAULT
            default "/mnt/nor/main.py"
            
        config MPY_PORT_USING_SELF_STARTING
            bool "Set MicroPython self-starting"
            default n
    endif
    
menuconfig PKG_USING_OTA_FROM_FILE
    bool "Enable ota from file library"
    select PKG_USING_CRCLIB
    default n
    
    if PKG_USING_OTA_FROM_FILE
        config OTA_FROM_FILE_DOWNLOAD_PART_NAME
            string "Set download part name, default: download"
            default "download"
            
        config OTA_FROM_FILE_FACTORY_PART_NAME
            string "Set factory part name, default: factory"
            default "factory"
            
        config OTA_FROM_FILE_DEVNAME
            string "Set storage device name, default: ud0p0"
            default "ud0p0"
            
        config OTA_FROM_FILE_DOWNLOAD_PATH
            string "Set firmware path, default: /mnt/udisk/ud0p0/download.rbl"
            default "/mnt/udisk/ud0p0/download.rbl"
            
        config OTA_FROM_FILE_FACTORY_PATH
            string "Set firmware path, default: /mnt/udisk/ud0p0/factory.rbl"
            default "/mnt/udisk/ud0p0/factory.rbl"
    endif
    