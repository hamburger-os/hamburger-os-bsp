menuconfig PKG_USING_SYSINFO
    bool "Enable systerm info"
    select BSP_USING_CPUTEMP
    select BSP_USING_MAX31826
    select BSP_USING_DS1682
    default n
    
    if PKG_USING_SYSINFO
        config SYSINFO_CPU_TEMP_NAME
            string "Set the cpu temp device name, default : temp_cpu"
            default "temp_cpu"
            
        config SYSINFO_CHIP_TEMP_NAME
            string "Set the chip temp device name, default : temp_max31826"
            default "temp_max31826"
            
        config SYSINFO_TIMES_DEV_NAME
            string "Set the times device name, default : ds1682"
            default "ds1682"
            
        config SYSINFO_PARTNAME
            string "Set the partition name used, default : max31826"
            default "max31826"
            
        config SYSINFO_PARTSIZE
            int "Set the partition size, default: 128"
            default (128)
    endif
