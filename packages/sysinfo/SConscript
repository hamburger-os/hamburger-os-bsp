# RT-Thread building script for bridge

import rtconfig
from building import *

cwd     = GetCurrentDir()
CPPPATH = [cwd, cwd + '/platform', cwd + '/platform/swos2']

src     = Split('''
                sysinfo.c
                ''')

src     += Glob('platform/*.c');
src     += Glob('platform/swos2/*.c');

group = DefineGroup('sysinfo', src, depend = ['PKG_USING_SYSINFO'], CPPPATH = CPPPATH)

Return('group')
